extends ../layout/header 
block header
        .row
            .col-sm-9.col-md-7.col-lg-5.mx-auto
                .card.card-signin.my-5
                    .card-body
                    h1.card-title.text-center Sign In
                    form.form-signin(method="POST")
                        if erros
                            each erro in erros
                                .alert.alert-danger= erro
                        .form-label-group
                            input#inputEmail.form-control(type='email',name="email", placeholder='Enter email',value = values ? values.email : "")
                            label(for='inputEmail') Email address
                        .form-label-group
                            input#inputPassword.form-control(type='password',name="password", placeholder='Password',value = values ? values.password : "")
                            label(for='inputPassword') Password
                        button.btn.btn-lg.btn-primary.btn-block.text-uppercase(type='submit') Sign in